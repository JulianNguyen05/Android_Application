<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#7E57C2"
                android:centerColor="#BA68C8"
                android:endColor="#64B5F6"
                android:type="linear" />
            <corners android:radius="22dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <padding android:left="12dp" android:right="12dp" android:top="12dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Bình thường -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#9575CD"
                android:centerColor="#BA68C8"
                android:endColor="#81D4FA"
                android:type="linear" />
            <corners android:radius="22dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
            <padding android:left="12dp" android:right="12dp" android:top="12dp" android:bottom="12dp"/>
        </shape>
    </item>
</selector>
