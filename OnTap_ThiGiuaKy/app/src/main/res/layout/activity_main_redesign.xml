<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_modern"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_header_card"
        android:elevation="8dp"
        android:padding="20dp">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_ntu"
            android:contentDescription="@string/desc_logo_ntu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/main_title"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.03"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_logo"
            app:layout_constraintTop_toTopOf="@id/iv_logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:background="@drawable/bg_card_rounded"
            android:elevation="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_subtitle"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="16dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:layout_marginBottom="20dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:background="@drawable/bg_button_gradient_blue"
                    android:foreground="?attr/selectableItemBackground">

                    <Button
                        android:id="@+id/btnCN2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Chức năng 2"
                        android:drawableStart="@drawable/ic_calculator"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical|start" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:background="@drawable/bg_button_gradient_purple"
                    android:foreground="?attr/selectableItemBackground">

                    <Button
                        android:id="@+id/btnCN3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Chức năng 3"
                        android:drawableStart="@drawable/ic_task"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical|start" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:background="@drawable/bg_button_gradient_green"
                    android:foreground="?attr/selectableItemBackground">

                    <Button
                        android:id="@+id/btnCN4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Chức năng 4"
                        android:drawableStart="@drawable/ic_task"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical|start" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:background="@drawable/bg_button_gradient_orange"
                    android:foreground="?attr/selectableItemBackground">

                    <Button
                        android:id="@+id/btnAbout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="About Me"
                        android:drawableStart="@drawable/ic_user"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical|start" />
                </FrameLayout>
            </GridLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:layout_margin="4dp"
                android:elevation="4dp"
                android:background="@drawable/bg_button_gradient_orange"
                android:foreground="?attr/selectableItemBackground">

                <Button
                    android:id="@+id/btnThem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Làm thêm"
                    android:drawableStart="@drawable/ic_bonus"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical|start" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>