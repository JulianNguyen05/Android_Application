<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_redesign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_modern"
    tools:context=".MainActivityRedesign">

    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_header_card"
        android:elevation="8dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_ntu"
            android:contentDescription="@string/desc_logo_ntu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/main_title"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.03"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_logo"
            app:layout_constraintTop_toTopOf="@id/iv_logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- NỘI DUNG CHÍNH -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:background="@drawable/bg_card_rounded"
            android:elevation="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_subtitle"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="16dp" />

            <!-- Nhóm 4 nút 2x2 -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:layout_marginBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCN2"
                    style="@style/MyModernButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:text="Chức năng 2"
                    app:icon="@drawable/ic_calculator"
                    app:backgroundTint="@drawable/bg_button_gradient_blue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCN3"
                    style="@style/MyModernButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:text="Chức năng 3"
                    app:icon="@drawable/ic_task"
                    app:backgroundTint="@drawable/bg_button_gradient_purple" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCN4"
                    style="@style/MyModernButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:text="Chức năng 4"
                    app:icon="@drawable/ic_task"
                    app:backgroundTint="@drawable/bg_button_gradient_green" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAbout"
                    style="@style/MyModernButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:text="About Me"
                    app:icon="@drawable/ic_user"
                    app:backgroundTint="@drawable/bg_button_gradient_orange" />
            </GridLayout>

            <!-- Nút làm thêm riêng -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnThem"
                style="@style/MyModernButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Làm thêm"
                app:icon="@drawable/ic_bonus"
                app:backgroundTint="@drawable/bg_button_gradient_orange"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
