<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grayish_blue"
        android:paddingBottom="80dp"
        android:clipToPadding="false"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"
        app:itemTextAppearanceInactive="@style/BottomNav.Text.Inactive"
        app:itemTextAppearanceActive="@style/BottomNav.Text.Active"
        app:menu="@menu/bottom_nav_menu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:backgroundTint="@color/comic_blue_dark"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        android:contentDescription="Thêm giao dịch mới"

        android:elevation="8dp"
        android:translationZ="12dp"

        android:layout_marginBottom="90dp"
        android:layout_marginEnd="5dp"
        app:useCompatPadding="true"

        app:layout_anchor="@id/bottom_navigation"
        app:layout_anchorGravity="top|end" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
